---
interface Props {
	nombre: string;
	descripcion: string;
}

const { descripcion, nombre } = Astro.props;
---

<div class="m-4 w-64 rounded-xl shadow-sm border border-gray-200 p-4 bg-white hover:shadow-md transition-shadow">
	<h2 class="text-base font-medium text-gray-700 mb-2">{nombre}</h2>
	<p class="text-sm text-gray-600 leading-relaxed">{descripcion}</p>
</div>